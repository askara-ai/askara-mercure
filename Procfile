web: ADDR=":${ADDR}" ORIGINS_LIST="${MERCURE_CORS_ALLOWED_ORIGINS}" && read -r -a ORIGINS <<< "$ORIGINS_LIST" && ORIGINS_FLAGS="" && for ORIGIN in "${ORIGINS[@]}"; do ORIGINS_FLAGS+=" --cors-allowed-origins=\"$ORIGIN\""; done && mercure --debug="${MERCURE_DEBUG}" $ORIGINS_FLAGS --jwt-key="${MERCURE_SUBSCRIBER_JWT_KEY}" --allow-anonymous --publish-allowed-origins="${MERCURE_PUBLISH_ALLOWED_ORIGINS}" --write-timeout 1800s --heartbeat-interval 20s